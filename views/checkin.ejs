<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Checkin</title>
	<script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>
	<style>
		body {
			text-align: center;
			padding: 20px;
			overflow: hidden;
		}

		h1 {
			margin-bottom: 20px;
			font-size: 2rem;
		}

		#reader {
			width: 100%;
			max-width: 500px;
			margin: auto;
			border: 3px solid #000;
			border-radius: 15px;
			overflow: hidden;
		}

		#result {
			margin-top: 20px;
			font-size: 18px;
			font-weight: bold;
		}

		button {
			margin-top: 15px;
			padding: 10px 20px;
			font-size: 16px;
			background: transparent;
			border: 2px solid #000;
			border-radius: 10px;
			cursor: pointer;
		}
	</style>
</head>

<body>
	<h1>Checkin</h1>
	<div id="reader"></div>
	<div id="result">Align your QR Code inside the scanner box...</div>
	<button onclick="location.reload()">Reset Scanner</button>
	<div id="existance"></div>
	<br>
	check manually: <input type="text" id="idinput"> <button onclick="chk()">Check</button>
	<script>
		var inp = document.getElementById("idinput");
		var existance = document.getElementById("existance");
		function onScanSuccess(decodedText) {
			document.getElementById("result").innerText = "Scanned QR: " + decodedText;
			check(decodedText);
		}

		function onScanError(errorMessage) {
			console.log("Scan error:", errorMessage);
		}

		function chk() {
			check(inp.value);
		}
		async function check(id) {
			const data = { id };
			try {
				const response = await fetch("/verify", {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json',
					},
					body: JSON.stringify(data),
				});

				const resp = await response.json();
				console.log(resp);
				if (resp.exists) {
					existance.innerHTML = `Exists`
					existance.style.color="green"
				} else {
					existance.innerHTML = `Doesnt Exists`
					existance.style.color="red"
				}

			} catch (error) {
				console.error('Error sending request:', error);
			}
		}


		let html5QrcodeScanner = new Html5QrcodeScanner(
			"reader",
			{ fps: 10, qrbox: { width: 250, height: 250 } }
		);
		html5QrcodeScanner.render(onScanSuccess, onScanError);
	</script>
</body>

</html>